<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:_2025_09_15_pocket_calculator.ViewModels"
             x:DataType="vm:CalculatorViewModel"
             x:Class="_2025_09_15_pocket_calculator.Views.CalculatorView">
    <Grid RowDefinitions="60,80,80,80,80" ColumnDefinitions="80,80,80,80" ShowGridLines="False">
        <Border Grid.ColumnSpan="4" HorizontalAlignment="Stretch" BorderThickness="3" BorderBrush="Gray">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <TextBlock Text="{Binding DisplayText}" FontSize="24" Padding="10, 0, 10, 0" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="1" Grid.Column="0" Content="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="7"/>
        <Button Grid.Row="1" Grid.Column="1" Content="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="8"/>
        <Button Grid.Row="1" Grid.Column="2" Content="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="9"/>
        <Button Grid.Row="1" Grid.Column="3" Content="/" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="/"/>

        <Button Grid.Row="2" Grid.Column="0" Content="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="4"/>
        <Button Grid.Row="2" Grid.Column="1" Content="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="5"/>
        <Button Grid.Row="2" Grid.Column="2" Content="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="6"/>
        <Button Grid.Row="2" Grid.Column="3" Content="*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="*"/>

        <Button Grid.Row="3" Grid.Column="0" Content="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="1"/>
        <Button Grid.Row="3" Grid.Column="1" Content="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="2"/>
        <Button Grid.Row="3" Grid.Column="2" Content="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="3"/>
        <Button Grid.Row="3" Grid.Column="3" Content="-" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="-"/>

        <Button Grid.Row="4" Grid.Column="0" Content="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="0"/>
        <Button Grid.Row="4" Grid.Column="1" Content="C" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding ClearButtonClickCommand}"/>
        <Button Grid.Row="4" Grid.Column="2" Content="=" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding EqualsButtonClickCommand}"/>
        <Button Grid.Row="4" Grid.Column="3" Content="+" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" Command="{Binding AddToDisplayCommand}" CommandParameter="+"/>


    </Grid>
</UserControl>
